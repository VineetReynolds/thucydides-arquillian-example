<?xml version="1.0"?>
<arquillian xmlns="http://jboss.com/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<engine>
		<property name="deploymentExportPath">target/</property>
	</engine>
	<!-- Managed JBoss configuration -->
	<container qualifier="jbossas7" default="true">
		<configuration>
			<property name="jbossHome">D:\Apps\jboss-as-7.1.0.Final</property>
			<property name="javaHome">C:\Java\jdk1.6.0_26</property>
			<property name="modulePath">D:\Apps\jboss-as-7.1.0.Final\modules</property>
		</configuration>
	</container>
	<!-- Firefox Driver configuration -->
	<extension qualifier="webdriver">
		<property name="implementationClass">org.openqa.selenium.firefox.FirefoxDriver</property>
	</extension>
</arquillian>